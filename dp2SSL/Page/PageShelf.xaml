<local:MyPage x:Class="dp2SSL.PageShelf"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:dp2SSL"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      WindowTitle="书柜" Title="书柜"
      x:Name="_this" >
    <Page.Resources>
        <local:StringToVisibilityConverter x:Key="StringToVis" />
    </Page.Resources>
    <Grid Name="mainGrid" Background="Black" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="78" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
            <!--
            <RowDefinition Height="30"/>
            -->
        </Grid.RowDefinitions>
        <!--
        <Button Grid.Row="0" Grid.ColumnSpan="3">Top</Button>
        -->
        <!-- left bar -->
        <DockPanel Grid.Row="1" Grid.Column="0" 
                    Margin="10,10,0,0">
            <Grid Height="20" DockPanel.Dock="Top"/>
            <Button Name="goHome" ToolTip="返回主菜单"
                    Style="{DynamicResource RoundedButtonLightStyle}"
                    BorderThickness="0" Click="GoHome_Click" DockPanel.Dock="Top">
                <!--
                <fa:ImageAwesome Icon="Home"
                             Height="40" Foreground="{StaticResource buttonForeground}" Margin="6"/>
                -->
                <iconPacks:PackIconBootstrapIcons Kind="House" 
                                            Width="36" Height="36" Foreground="{StaticResource buttonForeground}" Margin="6"/>
            </Button>
            <Grid Height="20" DockPanel.Dock="Top"/>
            <Button Name="register"  
                    Style="{DynamicResource RoundedButtonLightStyle}"
                    BorderThickness="0"
                    Click="register_Click" ToolTip="绑定读者证" DockPanel.Dock="Top">
                <!--
                <fa:ImageAwesome Icon="UserPlus"
                             Height="40" Foreground="DarkGray" Margin="4"/>
                -->
                <iconPacks:PackIconVaadinIcons Kind="UserCard" 
                                            Width="36" Height="36" Foreground="{StaticResource buttonForeground}" Margin="6"/>
            </Button>
            <Grid Height="20" DockPanel.Dock="Top" />
            <Button Name="goHelp" ToolTip="帮助"
                    Style="{DynamicResource RoundedButtonLightStyle}" 
                    BorderThickness="0" DockPanel.Dock="Top">
                <fa:ImageAwesome Icon="LightbulbOutline"
                             Height="40" Foreground="{StaticResource buttonForeground}" Margin="6"/>
                <!--
                <iconPacks:PackIconJamIcons Kind="Lightbulb" 
                                            Width="40" Height="40" Foreground="{StaticResource buttonForeground}" Margin="6" Padding="1"/>
                -->
            </Button>
            <Grid Height="40" DockPanel.Dock="Top"/>
            <local:FingerprintVideoControl x:Name="fingerprintVideo" DockPanel.Dock="Bottom"/>
            <Menu x:Name="menu"  Width="Auto" Height="Auto" Visibility="Collapsed">
                <MenuItem Header="_工具">
                    <MenuItem x:Name="closeRF" Header="关闭射频" HorizontalAlignment="Left" Width="Auto" Click="CloseRF_Click"/>
                    <CheckBox Name="pauseSubmit" 
                      Checked="pauseSubmit_Checked"
                      Unchecked="pauseSubmit_Unchecked">暂停提交</CheckBox>
                    <Button Name="inventory" Click="inventory_Click" Visibility="Visible">盘点</Button>
                    <Button Name="restart" Click="restart_Click" Visibility="Visible">重启</Button>
                </MenuItem>
            </Menu>


            <Border Name="lamp" Width="30" Height="30" Background="Black"/>
            <TextBlock Name="updateInfo" ToolTip="升级信息" Visibility="Collapsed"
                       Background="DarkOrange" Foreground="White"
                       TextWrapping="Wrap" Padding="6,6,6,6"
                       ></TextBlock>
            <!--
            <TextBlock Name="retryInfo" ToolTip="重试" Visibility="Collapsed"
                       Background="DarkOrange" Foreground="White"
                       TextWrapping="Wrap" Padding="6,6,6,6"
                       ></TextBlock>
            -->

            <TextBlock Name="patronReaderInfo" Visibility="Collapsed"
                       ToolTip="身份读卡器活跃计数"
                       Foreground="White"
                       TextWrapping="Wrap" Padding="6,6,6,6"
                       >身份读卡器活跃计数</TextBlock>

        </DockPanel>
        <Button Grid.Row="1" Grid.Column="2">Right</Button>
        <!--
        <Button Grid.Row="2" Grid.ColumnSpan="3">Bottom</Button>
        <TextBlock Grid.Row="2" Grid.ColumnSpan="3"
            Name="error" Visibility="Collapsed">Error Text</TextBlock>
        -->
        <TextBox 
            Grid.Row="2" Grid.ColumnSpan="3" Text="{Binding Path=Error, Mode=OneWay}"
                   Height="60" IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                   FontSize="20" FontWeight="Bold" Foreground="White" Background="DarkRed"
                   Visibility="{Binding Path=Error, Mode=OneWay,Converter={StaticResource StringToVis}}"
                   TextWrapping="WrapWithOverflow"/>
        <!--
        <TextBlock Grid.Row="3" Grid.ColumnSpan="3" Text="{Binding GlobalError}"
                                       FontSize="20" FontWeight="Bold" Foreground="White" Background="DarkRed"
                                       Visibility="{Binding Path=GlobalError, Converter={StaticResource StringToVis}}"
                                       TextWrapping="WrapWithOverflow"/>
-->
        <Grid x:Name="frame"
            Grid.Row="1" Grid.Column="1" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="100"/>
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="300" Name="patronColumn" MinWidth="100"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Name="patronRow" Height="*" />
                <RowDefinition Height="0"/>

                <RowDefinition Height="0" />
                <RowDefinition Height="0"/>

                <!-- 60 -->
            </Grid.RowDefinitions>
            <!-- 柜门控件 -->
            <Grid x:Name="doorControlPanel" 
                  Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Background="Transparent" Foreground="Gray" FontSize="14" TextAlignment="Center"
                    Text="书柜"/>
                <!--
                <local:EntityListControl x:Name="booksControl" Grid.Row="1" Visibility="Collapsed"/>
                -->
                <local:DoorControl x:Name="doorControl" Grid.Row="1" />
            </Grid>
            <GridSplitter x:Name="splitter" 
                Grid.Column="1"
                HorizontalAlignment="Stretch" Background="Blue">
                <!-- 
                https://stackoverflow.com/questions/1665781/styling-gridsplitter-wpf-c-sharp 
                -->
                <GridSplitter.Template>
                    <ControlTemplate TargetType="{x:Type GridSplitter}">
                        <Grid>
                            <Button Content="⁞" BorderThickness="0" Background="Transparent" Foreground="DarkGray"/>
                            <Rectangle Fill="#00FFFFFF" />
                        </Grid>
                    </ControlTemplate>
                </GridSplitter.Template>
            </GridSplitter>
            <!-- 读者信息 -->
            <Grid x:Name="patronControlPanel"
                Grid.Column="2"
                  MaxWidth="700" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock Background="Transparent" Foreground="Gray" FontSize="14" TextAlignment="Center"
                    Text="读者"/>
                <local:MyScrollViewer Grid.Row="1" PanningMode="Both"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <local:PatronControl x:Name="patronControl" 
                                     Grid.Row="1" />
                </local:MyScrollViewer>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ToggleButton Name="fixPatron" Grid.Column="0" Margin="10,0,10,0"
                                  HorizontalAlignment="Left" VerticalAlignment="Stretch"
                                  IsEnabled="False"
                                  Content="固定"
                              Checked="FixPatron_Checked" Unchecked="FixPatron_Unchecked">
                        <ToggleButton.Resources>

                            <ResourceDictionary>
                                <ResourceDictionary.MergedDictionaries>
                                    <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                                    <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                                    <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                                    <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Blue.xaml" />
                                    <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.Purple.xaml" />
                                </ResourceDictionary.MergedDictionaries>
                                <Style TargetType="ToggleButton" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Style.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource SecondaryAccentBrush}" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ResourceDictionary>
                        </ToggleButton.Resources>
                    </ToggleButton>
                    <Button Name="clearPatron" Grid.Column="1" 
                            HorizontalContentAlignment="Center" VerticalAlignment="Stretch"
                            Background="Transparent" Foreground="LightGray"
                            Content="清除读者信息" IsEnabled="False"
                        Click="ClearPatron_Click">
                        <Button.Resources>
                            <ResourceDictionary>
                                <ResourceDictionary.MergedDictionaries>
                                    <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml"/>
                                    <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml"/>
                                </ResourceDictionary.MergedDictionaries>
                            </ResourceDictionary>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Grid>
            <StackPanel Grid.Column="0" Grid.Row="1" 
                        Visibility="Collapsed"
                        Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="openButton" 
                    Style="{DynamicResource RoundedButtonStyle}" 
                    Width="160" Height="60" 
                    FontSize="30" 
                    Foreground="White" 
                     Click="OpenButton_Click">
                    <Button.Content>
                        <TextBlock>开门</TextBlock>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</local:MyPage>
