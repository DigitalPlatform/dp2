<UserControl x:Class="dp2SSL.NumberKeyboardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dp2SSL"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Name="key_0" 
                Content="0"
                Grid.Column="0" Grid.Row="3" 
                Click="Key_0_Click"/>
        <Button Name="key_1" 
                Content="1"
                Grid.Column="0" Grid.Row="2"
                Click="Key_0_Click"/>
        <Button Content="2"
                Grid.Column="1" Grid.Row="2"
                Click="Key_0_Click"/>
        <Button Content="3"
                Grid.Column="2" Grid.Row="2"
                Click="Key_0_Click"/>
        <Button Content="4"
                Grid.Column="0" Grid.Row="1"
                Click="Key_0_Click"/>
        <Button Content="5"
                Grid.Column="1" Grid.Row="1"
                Click="Key_0_Click"/>
        <Button Content="6"
                Grid.Column="2" Grid.Row="1"
                Click="Key_0_Click"/>
        <Button Content="7"
                Grid.Column="0" Grid.Row="0"
                Click="Key_0_Click"/>
        <Button Content="8"
                Grid.Column="1" Grid.Row="0"
                Click="Key_0_Click"/>
        <Button Content="9"
                Grid.Column="2" Grid.Row="0"
                Click="Key_0_Click"/>
        <Button Name="key_backspace" 
                Content="Delete"
                Grid.Column="1" Grid.Row="3" 
                Click="Key_0_Click"/>
        <Button Name="key_return" 
                Content="Enter"
                Grid.Column="2" Grid.Row="3" 
                Click="Key_0_Click"/>

    </Grid>
</UserControl>
